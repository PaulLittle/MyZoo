<Window x:Class="MyZoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyZoo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Background="Coral">
        <ListBox Name="lbxAnimals" Margin="10" FontSize="22" MinHeight="200" Background="BlanchedAlmond" Padding="10" SelectionChanged="lbxAnimals_SelectionChanged"></ListBox>
        <TextBlock Name="Notice" Margin="10" FontSize="26" Background="BlanchedAlmond" Padding="10"></TextBlock>
    </StackPanel>
</Window>
